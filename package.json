{
	"name": "scheduling-app",
	"version": "1.0.0",
	"description": "TypeScript-based staffing schedule generator with TanStack frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "npm run build:types && vite build",
		"build:types": "tsc -p tsconfig.types.json",
		"serve": "vite preview",
		"test": "vitest run",
		"test:types": "jest",
		"deploy": "npm run build && wrangler deploy",
		"preview": "npm run build && vite preview",
		"cf-typegen": "wrangler types",
		"lint": "eslint src --ext .ts,.tsx",
		"format": "prettier --write \"src/**/*.{ts,tsx}\"",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 execute scheduling --local --file=./drizzle/0000_happy_hercules.sql",
		"db:migrate:remote": "wrangler d1 execute scheduling --remote --file=./drizzle/0000_happy_hercules.sql",
		"db:studio": "drizzle-kit studio"
	},
	"keywords": [
		"scheduling",
		"staffing",
		"typescript",
		"tanstack",
		"react"
	],
	"author": "Ethan Harstad",
	"license": "MIT",
	"dependencies": {
		"@cloudflare/vite-plugin": "^1.13.8",
		"@tailwindcss/vite": "^4.0.6",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.44.7",
		"lucide-react": "^0.544.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwindcss": "^4.0.6",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/jest": "^29.5.0",
		"@types/node": "^22.19.1",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"@vitejs/plugin-react": "^5.0.4",
		"drizzle-kit": "^0.31.7",
		"eslint": "^8.57.0",
		"jest": "^29.7.0",
		"jsdom": "^27.0.0",
		"prettier": "^3.3.3",
		"ts-jest": "^29.1.0",
		"typescript": "^5.7.2",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0",
		"wrangler": "^4.47.0"
	}
}
